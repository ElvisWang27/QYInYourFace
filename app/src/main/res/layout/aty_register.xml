<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myrealwhite"
    >
<LinearLayout
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <ImageView
        android:id="@+id/id_iv_regist_profile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_regist_profile"
        android:layout_margin="20dp"
        />

    <LinearLayout
        style="@style/register_list"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_marginRight="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:src="@drawable/ic_regist_user"
            />
        <com.cengalabs.flatui.views.FlatEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/id_et_regist_name"
            android:hint="Name:"
            android:inputType="textPersonName"
            flatui:fl_fieldStyle="fl_box"
            flatui:fl_theme="@array/mygreydarkertheme"
            flatui:fl_cornerRadius="10dp"
            flatui:fl_borderWidth="1dp"

    />
    </LinearLayout>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/register_list"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:padding="10dp"
            android:layout_marginRight="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_regist_sex"
            />

        <com.cengalabs.flatui.views.FlatRadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="male"
            flatui:fl_size="20sp"
            android:textSize="20sp"
            flatui:fl_theme="@array/mygreydarkertheme"
            android:layout_weight="1"
            />
        <com.cengalabs.flatui.views.FlatRadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="female"
            android:layout_gravity="center"
            flatui:fl_size="20sp"
            android:textSize="20sp"
            android:layout_weight="1"
            flatui:fl_theme="@array/mygreydarkertheme"
            />

    </LinearLayout>
    </RadioGroup>


    <LinearLayout
        style="@style/register_list"
        android:orientation="horizontal"
        >
        <ImageView
            android:padding="10dp"
            android:layout_marginRight="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_regist_email"
            />
    <com.cengalabs.flatui.views.FlatEditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/id_et_regist_email"
        android:hint="E-mail:"
        flatui:fl_fieldStyle="fl_box"
        flatui:fl_cornerRadius="10dp"
        flatui:fl_borderWidth="1dp"

        android:inputType="textEmailAddress"
        flatui:fl_theme="@array/mygreydarkertheme"
        />
    </LinearLayout>


    <LinearLayout
        style="@style/register_list"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_marginRight="5dp"
            android:padding="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_regist_password"
            />
    <com.cengalabs.flatui.views.FlatEditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/id_et_regist_psw"
        android:hint="Password:"
        android:inputType="textPassword"
        flatui:fl_fieldStyle="fl_box"
        flatui:fl_cornerRadius="10dp"
        flatui:fl_borderWidth="1dp"

        flatui:fl_theme="@array/mygreydarkertheme"
        />
    </LinearLayout>
    <LinearLayout
        style="@style/register_list"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_marginRight="5dp"
            android:padding="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_regist_confirm"
            />
    <com.cengalabs.flatui.views.FlatEditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/id_et_regist_psw_confirm"
        android:hint="Password Confirm:"
        android:inputType="textPassword"
        flatui:fl_fieldStyle="fl_box"
        flatui:fl_theme="@array/mygreydarkertheme"
        flatui:fl_cornerRadius="10dp"
        flatui:fl_borderWidth="1dp"

        />
</LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用第三方（推荐)"
        android:layout_margin="15dp"
        android:textSize = "12sp"
        android:textColor="@color/mywhite"
        android:layout_gravity="left"
        />


    <ImageView
        android:id="@+id/id_iv_regist_wx"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/weixin_logo"
        android:layout_marginLeft="15dp"
        android:layout_gravity="left"
        />

    <com.cengalabs.flatui.views.FlatButton
        android:id="@+id/id_btn_regist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_margin="15dp"
        flatui:fl_theme="@array/myredtheme"
         />
</LinearLayout>

</ScrollView>