<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myrealwhite"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp"
            >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_fight_with_detail_time" />

            <com.cengalabs.flatui.views.FlatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                flatui:fl_fontFamily="ygy"
                flatui:fl_fontWeight="light"
                android:layout_marginLeft="4dp"
                android:text="选择日期"
                android:textColor="@color/myred" />


        </LinearLayout>
<LinearLayout
    android:id="@+id/ic_ll_aty_gtf_set_date"
    android:layout_margin="30dp"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rectangle_radius_border"
    android:gravity="center"
    android:layout_gravity="center"
    >
    <TextView
        android:id="@+id/ic_tv_aty_gtf_set_date_yearmonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="2015年11月"
        android:layout_margin="2dp"
        android:gravity="center"
        android:background="@color/myred"
        android:textColor="@color/myrealwhite" />
    <com.cengalabs.flatui.views.FlatTextView
        android:id="@+id/ic_tv_aty_gtf_set_date_day"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="100sp"
        flatui:fl_fontFamily="ygy"
        android:gravity="center"
        android:drawableRight="@drawable/ic_cal"
        android:drawablePadding="5dp"
        flatui:fl_fontWeight="light"
        android:text="23"
        android:textColor="@color/myred" />
</LinearLayout>


    </LinearLayout>

    <com.cengalabs.flatui.views.FlatButton
        android:id="@+id/id_aty_goto_fight_next1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下一步"
        android:layout_margin="10dp"
        flatui:fl_theme="@array/myredtheme"
        flatui:fl_fontFamily="ygy"
        flatui:fl_fontWeight="light"
        />
</LinearLayout>