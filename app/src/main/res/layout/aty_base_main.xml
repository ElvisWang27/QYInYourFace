<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mygreylighter"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/banner_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/mymenucolor"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">


        <ImageView
            android:id="@+id/menu_0"
            style="@style/style_aty_main_banner_logo"
            android:src="@drawable/ic_menu0" />


        <ImageView
            android:id="@+id/menu_1"
            style="@style/style_aty_main_banner_logo"
            android:src="@drawable/ic_menu1" />


        <ImageView
            android:id="@+id/menu_2"
            style="@style/style_aty_main_banner_logo"
            android:src="@drawable/ic_menu2" />

        <ImageView
            android:id="@+id/menu_3"
            style="@style/style_aty_main_banner_logo"
            android:src="@drawable/ic_menu3" />


    </LinearLayout>

    <FrameLayout
        android:id="@+id/id_fl_main_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/banner_bar"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" />


</RelativeLayout>