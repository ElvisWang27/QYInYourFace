<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:id="@+id/p1"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:padding="10dp">

    <ImageView
        android:id="@+id/plist_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/profile" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/plist_logo"
        android:orientation="vertical">

        <TextView
            android:id="@+id/plist_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"
            android:text="User"
            android:textColor="@color/myblack"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/plist_game_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="4月15日/4月20日/4月22日"
            android:textColor="@color/mygrey"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/plist_game_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="深圳体育馆/福田体育馆"
            android:textColor="@color/mygrey"
            android:textSize="10sp" />


    </LinearLayout>

    <com.cengalabs.flatui.views.FlatButton
        android:id="@+id/button_block"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:text="待约"
        android:textSize="19px"
        flatui:fl_textAppearance="fl_none"
        flatui:fl_theme="@array/mygreytheme" />


</RelativeLayout>


