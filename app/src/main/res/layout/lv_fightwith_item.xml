<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/sel_lv_item_color_cge"
    android:id="@+id/p1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:padding="10dp">

    <ImageView
        android:id="@+id/plist_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/profile" />
    <TextView
        android:id="@+id/plist_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/plist_logo"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_alignLeft="@id/plist_logo"
        android:text="User"
        android:textColor="@color/myblack"
        android:textSize="12sp" />
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_boy"
        android:layout_alignBottom="@id/plist_user_name"
        android:layout_toRightOf="@id/plist_user_name"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/nop"
        android:layout_alignBottom="@id/plist_user_name"
        android:layout_toRightOf="@id/plist_logo"
        android:layout_toEndOf="@id/plist_logo"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="37dp"
        android:id="@+id/imageView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/mygrey"
        android:text="VS"
        android:layout_alignTop="@id/imageView"
        android:layout_toRightOf="@id/plist_logo"
        android:layout_toEndOf="@id/plist_logo" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignTop="@id/plist_logo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:id="@+id/linearLayout2"
        android:gravity="right"
        >



        <TextView
            android:id="@+id/plist_game_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="4月15日/4月20日/4月22日"
            android:textColor="@color/mygreydarker"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/plist_game_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="深圳体育馆/福田体育馆"
            android:textColor="@color/mygreydarker"
            android:textSize="10sp" />



    </LinearLayout>
    <com.cengalabs.flatui.views.FlatButton
        android:id="@+id/button_block"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:text="接受挑战"
        android:textSize="10sp"
        android:layout_alignRight="@id/linearLayout2"
        android:layout_marginTop="5dp"
        android:layout_below="@id/linearLayout2"
        flatui:fl_textAppearance="fl_none"
        flatui:fl_theme="@array/mygreylightertheme"
        />
</RelativeLayout>


