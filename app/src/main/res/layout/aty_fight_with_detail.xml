<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/p1" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:gravity="center"
                android:padding="20dp"
                android:text="VS"
                android:textColor="@color/myblack"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/nop" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <TextView
                android:id="@+id/id_tv_addr_sel"
                style="@style/style_aty_fight_detail_sel"
                android:text="地点选择" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/id_tv_addr_sel"
                android:orientation="vertical">
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <com.cengalabs.flatui.views.FlatRadioButton
                    style="@style/style_aty_fight_detail_sel_item"
                    android:text="深圳体育馆"
                    flatui:fl_theme="@array/mygreytheme" />

                <com.cengalabs.flatui.views.FlatRadioButton
                    style="@style/style_aty_fight_detail_sel_item"
                    android:text="福田育馆"
                    flatui:fl_theme="@array/mygreytheme" />

                <com.cengalabs.flatui.views.FlatRadioButton

                    style="@style/style_aty_fight_detail_sel_item"
                    android:text="南山体育馆"
                    flatui:fl_theme="@array/mygreytheme" />
                </RadioGroup>
            </LinearLayout>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <TextView
                android:id="@+id/id_tv_time_sel"
                style="@style/style_aty_fight_detail_sel"
                android:text="时间选择"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/id_tv_time_sel"
                android:orientation="vertical"

                >
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <com.cengalabs.flatui.views.FlatRadioButton
                    style="@style/style_aty_fight_detail_sel_item"
                    android:text="4月13日 20:00-22:00"
                    flatui:fl_theme="@array/mygreytheme" />

                <com.cengalabs.flatui.views.FlatRadioButton
                    style="@style/style_aty_fight_detail_sel_item"
                    android:text="4月13日 20:00-22:00"
                    flatui:fl_theme="@array/mygreytheme" />

                <com.cengalabs.flatui.views.FlatRadioButton
                    style="@style/style_aty_fight_detail_sel_item"
                    android:text="4月13日 20:00-22:00"
                    flatui:fl_theme="@array/mygreytheme" />
                </RadioGroup>
            </LinearLayout>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <TextView
                android:id="@+id/id_tv_serve_sel"
                style="@style/style_aty_fight_detail_sel"
                android:text="服务选择" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/id_tv_serve_sel"
                android:orientation="vertical"

                >
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <com.cengalabs.flatui.views.FlatRadioButton
                    style="@style/style_aty_fight_detail_sel_item"
                    android:text="矿泉水12只"
                    flatui:fl_theme="@array/mygreytheme" />

                <com.cengalabs.flatui.views.FlatRadioButton
                    style="@style/style_aty_fight_detail_sel_item"
                    android:text="专业裁判"
                    flatui:fl_theme="@array/mygreytheme" />
                </RadioGroup>
            </LinearLayout>


        </RelativeLayout>

        <com.cengalabs.flatui.views.FlatButton
            android:id="@+id/id_aty_fight_detail_access"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:text="接受挑战"
            flatui:fl_fontExtension="ttf"
            flatui:fl_fontFamily="huayun"
            flatui:fl_fontWeight="light"
            flatui:fl_theme="@array/myredtheme" />
    </LinearLayout>
</ScrollView>