<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"

    android:orientation="vertical"
    android:padding="15dp">

    <RelativeLayout
        android:id="@+id/id_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <com.lzxxteam.qyinyourface.ui.CircularImageView
            android:id="@+id/id_aty_fight_detail_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/profile" />

        <com.cengalabs.flatui.views.FlatButton
            android:id="@+id/button_block"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/id_aty_fight_detail_profile"
            android:text="与他联系"
            android:textSize="10sp"
            flatui:fl_textAppearance="fl_none"
            flatui:fl_theme="@array/grass" />
        <com.cengalabs.flatui.views.FlatTextView
            android:id="@+id/id_tv_aty_fight_detail_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_below="@id/id_aty_fight_detail_profile"
            android:layout_centerHorizontal="true"
            android:text="User"
            android:textColor="@color/mygreydarker2"
            android:textSize="14sp"
            flatui:fl_fontFamily="ygy"
            flatui:fl_fontWeight="light"

            />
    </RelativeLayout>

    <View
        android:id="@+id/id_view2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/id_view1"
        android:layout_marginTop="5dp"
        android:background="@drawable/line_dash" />

    <com.cengalabs.flatui.views.FlatTextView
        android:id="@+id/id_view2_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_view2"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="请选择符合您的约战时间"
        android:textColor="@color/mygreydarker2"
        android:textSize="12sp"
        flatui:fl_fontFamily="ygy"
        flatui:fl_fontWeight="light"

        />

    <com.cengalabs.flatui.views.FlatButton
        android:id="@+id/id_aty_fight_detail_access"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:text="接受挑战"
        flatui:fl_fontFamily="ygy"
        flatui:fl_fontWeight="light"
        flatui:fl_theme="@array/myredtheme" />

    <ScrollView
        android:id="@+id/id_view3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/id_aty_fight_detail_access"
        android:layout_below="@id/id_view2_1">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/id_ll_aty_fight_detail"
    >

</LinearLayout>
    </ScrollView>


</RelativeLayout>